@{ ViewData["Title"] = "Sign Up"; }

@model TempleSignup.Models.TempleModel

<h1>Add/Edit Task</h1>
<br />
<br />
<div class="text-center">
    <form method="post">

        <div class="form-group">
            <input type="hidden" value="@Model.id" asp-for="id" /><br />
        </div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control-sm" asp-for="Name" required /><br />
        </div>
        <div class="form-group">
            <label asp-for="DateTime">Date and Time</label>
            <input class="form-control-sm" asp-for="DateTime" readonly /><br />
        </div>
        <label asp-for="GroupSize">Group Size</label>
        <select class="form-control-sm" asp-for="GroupSize" required>
            <option readonly value="">Select a Number of People</option>
            @for (int i = 1; i < 16; i++)
            {
                <option value="@i">@i</option>
            }
        </select><br /><br />
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input class="form-control-sm" asp-for="Email" required />
        </div><br />
        <div class="form-group">
            <label asp-for="Phone">Phone</label>
            <input class="form-control-sm" asp-for="Phone" />
        </div>
        <br />
        <a asp-controller="Home" asp-action="SignUp" class="btn btn-outline-danger float-left m-1">Cancel</a>
        <input type="submit" class="btn btn-outline-success float-left m-1" value="Save" />
        <div asp-validation-summary="All"></div>
    </form>
</div>